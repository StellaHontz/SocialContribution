<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="25dp">

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/gradient3" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:onClick="ClickMenu"
                android:paddingHorizontal="5dp"
                app:srcCompat="@drawable/menu"
                app:tint="#FFFFFF" />
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".MainActivity">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/gradient3" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/logo2" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="125dp">

                            <TextView
                                android:id="@+id/textView27"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00FFFFFF"
                                android:paddingHorizontal="20dp"
                                android:paddingTop="15dp"
                                android:text="@string/text"
                                android:textAlignment="viewStart"
                                android:textColor="#FFF"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView28"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00FFFFFF"
                                android:paddingHorizontal="20dp"
                                android:text="@string/text2"
                                android:textAlignment="viewEnd"
                                android:textColor="#FFF"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="35dp"
                    android:paddingTop="15dp"
                    android:text="@string/categories"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="220dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/view14"
                            android:layout_width="260dp"
                            android:layout_height="180dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/helppeople" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView4"
                                android:layout_width="150dp"
                                android:layout_height="40dp"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginBottom="15dp"
                                android:backgroundTint="#C9000000"
                                app:cardCornerRadius="25dp">

                                <TextView
                                    android:id="@+id/eventTitle3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:text="@string/People"
                                    android:textColor="#ffff"
                                    android:textSize="24sp" />

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/view13"
                            android:layout_width="260dp"
                            android:layout_height="180dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/helpanimals" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView3"
                                android:layout_width="150dp"
                                android:layout_height="40dp"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginBottom="15dp"
                                android:backgroundTint="#C9000000"
                                app:cardCornerRadius="25dp">

                                <TextView
                                    android:id="@+id/eventTitle2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:text="@string/Animals"
                                    android:textColor="#ffff"
                                    android:textSize="24sp" />

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/view12"
                            android:layout_width="260dp"
                            android:layout_height="180dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"

                            app:cardCornerRadius="25dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/helpevents" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView2"
                                android:layout_width="150dp"
                                android:layout_height="40dp"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginBottom="15dp"
                                android:backgroundTint="#C9000000"
                                app:cardCornerRadius="25dp">

                                <TextView
                                    android:id="@+id/eventTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:text="@string/Events"
                                    android:textColor="#ffff"
                                    android:textSize="24sp" />

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/nearby"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#ff7844"
                    android:onClick="clickAround"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:text="@string/nearby"
                        android:textAlignment="center"
                        android:textColor="#2B2A2A"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <View

                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingStart="35dp"
                        android:text="@string/popular"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ppmore"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginVertical="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:backgroundTint="#4EB542"
                        android:paddingVertical="5dp"
                        app:cardCornerRadius="25dp">

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5dp"
                            android:gravity="center"
                            android:text="@string/seemore"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="220dp"
                        android:layout_marginVertical="10dp"
                        android:backgroundTint="#BDA79E"
                        app:cardCornerRadius="30dp"
                        android:layout_marginHorizontal="15dp">

                        <LinearLayout
                            android:id="@+id/popularpoints"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginEnd="15dp"
                            android:paddingTop="5dp"
                            >

                            <androidx.cardview.widget.CardView
                                android:id="@+id/nodatacard"
                                android:layout_width="300dp"
                                android:layout_height="180dp"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="25dp"
                                app:cardCornerRadius="15dp"
                                >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    app:srcCompat="@drawable/nodata" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:layout_marginBottom="50dp"
                                    android:text="@string/nodata"
                                    android:textColor="#333333"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/nodatasub"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:layout_marginBottom="30dp"
                                    android:text="@string/nodata2"

                                    android:textAlignment="center" />

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingStart="35dp"
                        android:text="@string/justadded"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/jamore"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginVertical="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:backgroundTint="#4EB542"
                        android:paddingVertical="5dp"
                        app:cardCornerRadius="25dp">

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#4EB542"
                            android:gravity="center"
                            android:text="@string/seemore"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="220dp"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="#BDA79E"
                        app:cardCornerRadius="30dp"
                        android:paddingStart="20dp"
                        android:paddingTop="5dp">

                        <LinearLayout
                            android:id="@+id/justadded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"

                            android:layout_marginEnd="15dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/nodatacard3"
                                android:layout_width="300dp"
                                android:layout_height="180dp"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginVertical="50dp"
                                app:cardCornerRadius="15dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    app:srcCompat="@drawable/nodata" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:layout_marginBottom="50dp"
                                    android:text="@string/nodata"
                                    android:textColor="#333333"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:layout_marginBottom="30dp"
                                    android:text="@string/nodata2"
                                    android:textAlignment="center" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </HorizontalScrollView>
                <View
                    android:id="@+id/view21"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingStart="35dp"
                        android:text="@string/suggestions"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sugmore"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginVertical="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:backgroundTint="#4EB542"
                        android:paddingVertical="5dp"
                        app:cardCornerRadius="25dp"
                        android:layout_marginTop="15dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/seemore"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="#BDA79E"
                        app:cardCornerRadius="30dp">

                        <LinearLayout
                            android:id="@+id/suggestionslinear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"
                            android:layout_marginEnd="15dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/nodatacard2"
                                android:layout_width="300dp"
                                android:layout_height="180dp"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginVertical="50dp"
                                app:cardCornerRadius="15dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    app:srcCompat="@drawable/nodata" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:layout_marginBottom="50dp"
                                    android:text="@string/nodata"
                                    android:textColor="#333333"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:layout_marginBottom="30dp"
                                    android:text="@string/nodata2"

                                    android:textAlignment="center" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </HorizontalScrollView>

                <View
                    android:id="@+id/view22"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include layout="@layout/main_nav_drawer" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
